<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_plane"
    android:orientation="vertical"
    tools:context="mightyaudio.activity.AllDoneActivty">
    <include layout="@layout/actionbar_header"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center|center_vertical"
        android:gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/text_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Setup is complete"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_27sdp"/>

        <TextView
            android:id="@+id/text_sub_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tap the Mighty below to learn \nabout its buttons."
            android:gravity="center_horizontal|center"
            android:layout_marginTop="@dimen/_5sdp"
            android:textAppearance="?android:textAppearanceMedium"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_vertical">

            <FrameLayout
                android:layout_width="@dimen/_250sdp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/device"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_46sdp"
                    android:layout_marginBottom="@dimen/_25sdp"
                    android:src="@drawable/mighty_img" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/image_led"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|right"
                        android:layout_marginTop="@dimen/_37sdp"
                        android:layout_marginRight="@dimen/_6sdp"
                        android:src="@drawable/oval_blue" />

                    <ImageView
                        android:id="@+id/tooltip_led"
                        android:layout_gravity="right"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_marginTop="@dimen/_13sdp"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginLeft="@dimen/_58sdp"
                        android:src="@drawable/ledimage"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_50sdp">

                    <ImageView
                        android:id="@+id/image_jack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_29sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:src="@drawable/oval_blue" />

                    <ImageView
                        android:id="@+id/tooltip_jack"
                        android:layout_width="@dimen/_140sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jack_charger"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_gravity="center|center_horizontal"
                        android:visibility="invisible"/>

                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_18sdp"
                    android:layout_gravity="center_horizontal|top">

                    <ImageView
                        android:id="@+id/image_volume_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_23sdp"
                        android:src="@drawable/oval_blue" />

                    <ImageView
                        android:id="@+id/tooltip_volume_up"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginTop="@dimen/_17sdp"
                        android:src="@drawable/volume_up"
                        android:visibility="invisible"/>

                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center_vertical|left">

                    <ImageView
                        android:id="@+id/image_previous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:layout_marginBottom="@dimen/_36sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:src="@drawable/oval_blue" />

                    <ImageView
                        android:id="@+id/tooltip_previous"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="right"
                        android:layout_marginBottom="@dimen/_44sdp"
                        android:layout_marginLeft="@dimen/_60sdp"
                        android:src="@drawable/previous"
                        android:visibility="invisible"/>

                </FrameLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|right"
                    android:layout_marginRight="@dimen/_23sdp"
                    android:layout_marginTop="@dimen/_22sdp">
                    <ImageView
                        android:id="@+id/image_playlist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top|right|center_vertical"
                        android:layout_marginTop="@dimen/_23sdp"
                        android:layout_marginRight="@dimen/_25sdp"
                        android:src="@drawable/oval_blue" />

                    <ImageView
                        android:id="@+id/tooltip_playlist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/playlist_selector"
                        android:layout_marginRight="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:visibility="invisible"/>


                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_37sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_gravity="center_vertical|right">

                    <ImageView
                        android:id="@+id/image_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:src="@drawable/oval_blue" />

                    <ImageView
                        android:id="@+id/tooltip_next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right|top"
                        android:layout_marginRight="@dimen/_27sdp"
                        android:layout_marginBottom="@dimen/_38sdp"
                        android:src="@drawable/next"
                         android:visibility="invisible"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="@dimen/_37sdp"
                    android:layout_marginRight="@dimen/_20sdp">

                    <ImageView
                        android:id="@+id/image_volume_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_80sdp"
                        android:layout_gravity="bottom|center"
                        android:src="@drawable/oval_blue" />

                    <ImageView
                        android:id="@+id/tooltip_volume_down"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/volume_down"
                        android:layout_gravity="bottom|center"
                        android:layout_marginBottom="@dimen/_20sdp"
                        android:visibility="invisible"/>

                </FrameLayout>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/image_play_pause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/oval_blue" />

                    <ImageView
                        android:id="@+id/tooltip_play_pause"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_40sdp"
                        android:src="@drawable/play_pause"
                        android:visibility="invisible"/>

                </FrameLayout>


            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"

            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_gravity="bottom|center_horizontal">

                <TextView
                    android:id="@+id/text_buttom_head"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:gravity="center_horizontal|center"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:text="Pink means charging and charged\nGreen means power and sync\nBlue means Bluetooth\nOrange means low power and power off"/>
            </FrameLayout>

            <Button
                android:id="@+id/btn_all_done"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/_65sdp"
                android:layout_marginRight="@dimen/_65sdp"
                android:background="@drawable/btn_selector"
                android:gravity="center_vertical|center|center_horizontal"
                android:text="ALL DONE"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/setup_btn_color"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>



</LinearLayout>