<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/welcome_background"
    tools:context="mightyaudio.activity.SetUpActivity"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_txt_mighty_blue"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_gravity="center_horizontal|bottom"/>

            <TextView
                android:id="@+id/text_static_head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:gravity="center_horizontal"
                android:layout_margin="@dimen/_15sdp"
                android:text="We recommend that you follow\n some quick steps to get set up."/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                android:layout_gravity="bottom|center_horizontal"
                android:gravity="center_horizontal|center_vertical">
                <ImageView
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:src="@drawable/lets_move"
                    android:layout_marginLeft="@dimen/_110sdp"
                    android:layout_gravity="center|top"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mighty_white_image"
                    android:layout_gravity="center_horizontal|bottom"/>
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/_45sdp"
            android:orientation="vertical" >

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/setup"
                android:id="@+id/setup"
                android:layout_marginLeft="@dimen/_52sdp"
                android:layout_marginRight="@dimen/_52sdp"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/_18sdp"
                android:textColor="@color/setup_btn_color"
                android:background="@drawable/btn_selector"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18sdp"
                android:text="@string/no_thanks"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:id="@+id/text_no_thanks"
                android:textColor="#FFFFFF"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
