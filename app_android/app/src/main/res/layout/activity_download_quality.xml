<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_plane"
    tools:context="mightyaudio.activity.DownloadQualityActivity">

    <include layout="@layout/actionbar_header"/>

   <!-- <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/list_item_bg_spotify"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/dq_blue_tick_normal"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_blue_tick"/>
                <TextView
                    android:id="@+id/text_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:fontFamily="serenity-light.ttf"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Normal"
                    android:layout_weight="1"/>
                <FrameLayout
                    android:id="@+id/normal_frame_layout"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp">
                    <ImageView
                        android:id="@+id/normal_img_plus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_alignRight="@+id/text_change_username"
                        android:src="@drawable/list_item_plus" />

                    <ImageView
                        android:id="@+id/normal_img_tick"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_alignRight="@+id/text_change_username"
                        android:src="@drawable/list_item_tick_blue" />
                </FrameLayout>

            </LinearLayout>
             <LinearLayout
                android:layout_width="match_parent"
                 android:layout_height="@dimen/_50sdp"
                 android:background="@drawable/list_item_bg_spotify"
                android:orientation="horizontal">
            <ImageView
                android:id="@+id/dq_blue_tick_high"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_blue_tick"/>
                <TextView
                    android:id="@+id/text_high"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:fontFamily="serenity-light.ttf"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="High"
                    android:layout_weight="1"/>
                 <FrameLayout
                     android:id="@+id/high_frame_layout"
                     android:layout_width="@dimen/_30sdp"
                     android:layout_height="@dimen/_30sdp"
                     android:layout_gravity="center_vertical"
                     android:layout_marginRight="10dp">
                     <ImageView
                         android:id="@+id/high_img_plus"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_gravity="right"
                         android:layout_alignRight="@+id/text_change_username"
                         android:src="@drawable/list_item_plus" />

                     <ImageView
                         android:id="@+id/high_img_tick"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_gravity="right"
                         android:layout_alignRight="@+id/text_change_username"
                         android:src="@drawable/list_item_tick_blue" />

                 </FrameLayout>
             </LinearLayout>
             <LinearLayout
                android:layout_width="match_parent"
                 android:layout_height="@dimen/_50sdp"
                 android:background="@drawable/list_item_bg_spotify"
                android:orientation="horizontal">
                 <ImageView
                     android:id="@+id/dq_blue_tick_extreme"
                     android:layout_width="@dimen/_15sdp"
                     android:layout_height="@dimen/_17sdp"
                     android:layout_marginLeft="10dp"
                     android:layout_gravity="center"
                     android:background="@drawable/ic_blue_tick"/>
                <TextView
                    android:id="@+id/text_extreme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="13dp"
                    android:gravity="left|center_vertical"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:fontFamily="serenity-light.ttf"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Extreme"
                    android:layout_weight="1"/>
                 <FrameLayout
                     android:id="@+id/extrem_frame_layout"
                     android:layout_width="@dimen/_30sdp"
                     android:layout_height="@dimen/_30sdp"
                     android:layout_gravity="center_vertical"
                     android:layout_marginRight="10dp">
                     <ImageView
                         android:id="@+id/extrem_img_plus"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_gravity="right"
                         android:layout_alignRight="@+id/text_change_username"
                         android:src="@drawable/list_item_plus" />

                     <ImageView
                         android:id="@+id/extrem_img_tick"
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:layout_gravity="right"
                         android:layout_alignRight="@+id/text_change_username"
                         android:src="@drawable/list_item_tick_blue" />
                 </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_25sdp">

                <TextView
                    android:id="@+id/txt_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_vertical"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:text="Psst! Mighty's battery life is extended when playing music at normal download quality"/>
            </LinearLayout>



        </LinearLayout>



    <!--</ScrollView>-->


</LinearLayout>
