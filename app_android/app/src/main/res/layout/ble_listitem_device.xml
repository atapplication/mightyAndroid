<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ble_device_swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/bottom_wrapper"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--android:padding="7dp"
            android:background="#FFFB908C">-->
            <ImageView
                android:id="@+id/bt_delete"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_48sdp"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/disconnected" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@drawable/list_item_bg_spotify"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="20dp"
                android:paddingTop="20dp">

                <ImageView
                    android:id="@+id/blue_trick"
                    android:layout_width="@dimen/_12sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ic_blue_tick" />

                <TextView
                    android:id="@+id/device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:text="Device name"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center|center_vertical"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginRight="10dp"
                android:gravity="left|center_vertical">

                <FrameLayout
                    android:id="@+id/img_plus_rect"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle_background"
                    android:scaleType="fitCenter">

                    <ImageView
                        android:id="@+id/img_plus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/list_item_plus"
                        android:scaleType="fitCenter" />
                </FrameLayout>

                <TextView
                    android:id="@+id/text_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="center"
                    android:text=">"
                    android:textSize="@dimen/_25sdp" />

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:indeterminateDrawable="@drawable/custom_progressbar" />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>


</com.daimajia.swipe.SwipeLayout>